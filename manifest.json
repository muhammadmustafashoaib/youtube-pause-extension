{
  "manifest_version": 3,
  "name": "Pause Video on Tab Switch",
  "version": "1.0",
  "description": "Automatically pauses videos when you switch tabs.",
  "permissions": [],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "options_page": "options.html",
  "icons": {
    "128": "icons/icon128.png"
  },
  "storage": {
    "managed_schema": "schema.json"
  }
}